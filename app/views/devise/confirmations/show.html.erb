<div class="auth-title text-center">
  <h3><%= t '.title' %></h3>
</div>

<div class="panel panel-body login-form">

  <div class="auth-subtitle text-center">
    <small class="display-block"><%= t '.subtitle' %></small>
  </div>

  <%= render "layouts/errors" %>

  <%= form_for(resource, as: resource_name, url: update_user_confirmation_path, html: {method: :patch}) do |f| %>

      <%= hidden_field_tag :confirmation_token, @confirmation_token %>

      <div class="form-group has-feedback">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, placeholder: true, autofocus: true, autocomplete: "off", class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group has-feedback">
        <%= f.label :password_confirmation, class: 'control-label' %>
        <%= f.password_field :password_confirmation, placeholder: true, autocomplete: "off", class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit t('.set'), class: 'btn btn-success btn-block' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



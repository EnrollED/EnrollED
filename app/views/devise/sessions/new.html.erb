<div class="auth-title text-center">
  <h3>Sign in to Enrolled</h3>
</div>

<div class="panel panel-body login-form">

  <div class="auth-subtitle text-center">
    <small class="display-block">Enter your credentials below</small>
  </div>

  <%= render "devise/shared/errors" %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group has-feedback">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'Email', autofocus: true, class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-user" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group has-feedback">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-success btn-block' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



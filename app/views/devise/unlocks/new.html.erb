<div class="auth-title text-center">
  <h3><%= t '.title' %></h3>
</div>

<div class="panel panel-body login-form">

  <div class="auth-subtitle text-center">
    <small class="display-block"><%= t '.subtitle' %></small>
  </div>

  <%= render "devise/shared/errors" %>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

      <div class="form-group has-feedback">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: true, autofocus: true, class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-user" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit t('.resend'), class: 'btn btn-success btn-block' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
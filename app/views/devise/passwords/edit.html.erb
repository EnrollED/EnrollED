<div class="auth-title text-center">
  <h3>Change your password</h3>
</div>

<div class="panel panel-body login-form">

  <div class="auth-subtitle text-center">
    <small class="display-block">Enter your new credentials below</small>
  </div>

  <%= render "devise/shared/errors" %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group has-feedback">
        <%= f.label :password, "New password", class: 'control-label' %>
        <%= f.password_field :password, placeholder: 'Password',
                             autofocus: true, autocomplete: "off", class: 'form-control' %>
        <% if @minimum_password_length %>
            <small>(<%= @minimum_password_length %> characters minimum)</small>
            <br/>
        <% end %>

        <div class="form-control-feedback">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group has-feedback">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, placeholder: 'Confirm password', autocomplete: "off",
                             class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Change my password", class: 'btn btn-success btn-block' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



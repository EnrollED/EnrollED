<div class="auth-title text-center">
  <h3><%= t '.title' %></h3>
</div>

<div class="panel panel-body login-form">

  <div class="auth-subtitle text-center">
    <small class="display-block"><%= t '.subtitle' %></small>
  </div>

  <%= render "devise/shared/errors" %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group has-feedback">
        <%= f.label :password, t('.new_pass'), class: 'control-label' %>
        <%= f.password_field :password, placeholder: t('.new_pass'),
                             autofocus: true, autocomplete: "off", class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group has-feedback">
        <%= f.label :password_confirmation, t('.conf_new_pass'), class: 'control-label' %>
        <%= f.password_field :password_confirmation, placeholder: t('.conf_new_pass'), autocomplete: "off",
                             class: 'form-control' %>

        <div class="form-control-feedback">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit t('.change'), class: 'btn btn-success btn-block' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>



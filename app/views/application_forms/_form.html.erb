<%= form_for @application, url: application_forms_path do |f| %>

    <%= render 'layouts/errors', :resource => @application %>

    <%= f.fields_for :user, @application.user do |user|%>

        <h4>Osebni podatki</h4>

        <div class="form-group has-feedback">
          <%= user.label :firstname, t('activerecord.attributes.user.firstname'), class: 'control-label' %>
          <%= user.text_field :firstname, autofocus: true, class: 'form-control' %>
          <div class="form-control-feedback">
            <i class="fa fa-user" aria-hidden="true"></i>
          </div>
        </div>

        <div class="form-group has-feedback">
          <%= user.label :lastname, t('activerecord.attributes.user.lastname'), class: 'control-label' %>
          <%= user.text_field :lastname, class: 'form-control' %>
          <div class="form-control-feedback">
            <i class="fa fa-user" aria-hidden="true"></i>
          </div>
        </div>


    <% end %>
    <div class="form-group has-feedback">
      <%= f.label :maiden_name, t('activerecord.attributes.user.maiden_name'), class: 'control-label' %>
      <%= f.text_field :maiden_name, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :EMSO, t('activerecord.attributes.user.EMSO'), class: 'control-label' %>
      <%= f.text_field :EMSO, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :sex, t('activerecord.attributes.user.sex'), class: 'control-label' %>
      <%= f.select :sex, [['M', 1], ['F', 2]], { include_blank: true }, {class: 'form-control'} %>
    </div>



    <div class="form-group has-feedback">
      <%= f.label :place_of_birth, t('activerecord.attributes.user.place_of_birth'), class: 'control-label' %>
      <%= f.text_field :place_of_birth, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :country_of_birth, t('activerecord.attributes.user.country_of_birth'), class: 'control-label' %>
      <%= f.text_field :country_of_birth, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :phone, t('activerecord.attributes.user.phone'), class: 'control-label' %>
      <%= f.text_field :phone, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <%= f.fields_for :user, @application.user do |user|%>

        <div class="form-group has-feedback">
        <%= user.label :email, t('activerecord.attributes.user.email'), class: 'control-label' %>
        <%= user.text_field :email, class: 'form-control' %>
        <div class="form-control-feedback">
          <i class="fa fa-user" aria-hidden="true"></i>
        </div>
      </div>

    <%end%>
    <h4>Naslov stalnega prebivališča</h4>

    <div class="form-group has-feedback">
      <%= f.label :place_of_residence, t('activerecord.attributes.application.place_of_residence'), class: 'control-label' %>
      <%= f.text_field :place_of_residence, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :post_of_residence_id, t('activerecord.attributes.application.post_of_residence'), class: 'control-label' %>
      <%= f.collection_select :post_of_residence_id, @posts, :id, :name, {},{class: 'form-control', data: {placeholder: ''}} %>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :country_of_residence, t('activerecord.attributes.application.country_of_residence'), class: 'control-label' %>
      <%= f.text_field :country_of_residence, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <h4>Naslov za obvestila</h4>

    <div class="form-group has-feedback">
      <%= f.label :firstname_for_notification, t('activerecord.attributes.application.firstname_for_notification'), class: 'control-label' %>
      <%= f.text_field :firstname_for_notification, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :lastname_for_notification, t('activerecord.attributes.application.lastname_for_notification'), class: 'control-label' %>
      <%= f.text_field :lastname_for_notification, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :place_for_notification, t('activerecord.attributes.application.place_for_notification'), class: 'control-label' %>
      <%= f.text_field :place_for_notification, class: 'form-control' %>
      <div class="form-control-feedback">
        <i class="fa fa-user" aria-hidden="true"></i>
      </div>
    </div>

    <div class="form-group has-feedback">
      <%= f.label :post_for_notification_id, t('activerecord.attributes.application.post_for_notification'), class: 'control-label' %>
      <%= f.collection_select :post_for_notification_id, @posts, :id, :name, {},{class: 'form-control', data: {placeholder: ''}} %>
    </div>


    <h4>Državljanstvo</h4>
    <div class="form-group has-feedback">
      <%= f.label :nationality, t('activerecord.attributes.application.nationality'), class: 'control-label' %>
      <%= f.collection_select :citizen_id, @citizens, :id, :name, {},{class: 'form-control', data: {placeholder: ''}} %>
    </div>

    <h4>Državljanstvo</h4>

    <div class="actions">
      <%= f.submit t('activerecord.attributes.application.create_prijava')%>
    </div>

<% end %>

<div class="row page-heading">
  <div class="col-lg-10">
    <h2>Pogoji</h2>
  </div>
</div>

<br />

<div class="row">

  <div class="col-sm-4">
    <%= form_tag(completion_results_path, method: :get) do |f| %>

        <div class="input-group">

          <%= search_field_tag :search, params[:search], autofocus: true,
                               placeholder: t('defaults.search') + '...', class: 'form-control' %>

          <span class="input-group-btn">
            <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
          </span>

        </div>

    <% end %>
  </div>
</div>

<br/>

<div class="table-responsive full">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Sifra</th>
      <th>Naziv</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @completions.each do |c| %>
        <tr>
          <td><%= c.code %></td>
          <td><%= c.name %></td>

          <td class="text-right table-links">

            <%= link_to completion_result_completion_result_scores_path(c), class: 'label label-primary' do %>
                <i class="fa fa-bar-chart" title="<%= t '.view_results' %>" aria-hidden="true"></i>
            <% end %>

          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= paginate @completions %>
</div>

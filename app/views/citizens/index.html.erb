<p id="notice"><%= notice %></p>

<h1>Seznam državljanstev</h1>
<div class="row">
  <div class="col-sm-8 col-sm-offset-4 text-right">
    <%= link_to 'Dodaj zapis', new_citizen_path, class: 'btn btn-success' %>
  </div>
</div>


<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Šifra</th>
        <th>Naziv</th>
        <th>Veljavnost</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @citizens.each do |citizen| %>
        <tr>
          <td><%= citizen.code %></td>
          <td><%= citizen.name %></td>
          <td><% if citizen.is_valid? %>da<% else %>ne<% end %></td>
          <td>
            <%= link_to citizen, class: 'label label-success' do %>
                <i class="fa fa-eye" title="<%= "Prikaži" %>" aria-hidden="true"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_citizen_path(citizen), class: 'label label-info' do %>
                <i class="fa fa-pencil" title="<%= t 'defaults.edit' %>" aria-hidden="true"></i>
            <% end %>
          </td>
          <td>
            <% if citizen.is_valid? %>
              <%= link_to citizen, method: :delete, data: { confirm: 'Ali ste prepričani?' }, class: 'label label-danger' do %>
                  <i class="fa fa-trash" title="<%= "Odstrani" %>" aria-hidden="true"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% if @citizens.length == 0 %>
    <div class="text-center">

      <p><%= t 'defaults.no_records' %></p>
    </div>
<% end %>

<div>
  <%= paginate @citizens %>
</div>



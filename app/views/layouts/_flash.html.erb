<% flash.each do |name, msg| %>

    <% if msg.length > 0 -%>
            <%= content_tag :div, class: ('alert alert-' + (name == 'alert' ? 'danger' : 'info')) do -%>
                <%= content_tag :a, 'x', class: 'close', data: {dismiss: 'alert'} %>
                <%= msg %>
            <% end %>
    <% end %>

<% end %>
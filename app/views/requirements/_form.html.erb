<%= form_for [@study_program, @requirement] do |f| %>
    <%= render 'layouts/errors', :resource => @requirement %>

    <div class="form-group">
      <%= f.label "Pogoj", class: 'control-label' %>
      <%= f.collection_select :highschool_completion_id, HighschoolCompletion.where(code: [1,2,6]), :id, :name, {:include_blank => "---Izberi pogoj---"}, { :class => 'form-control' }  %>
    </div>

    <div class="form-group">
      <%= f.label "Poklic", class: 'control-label' %>
      <%= f.collection_select :profession_id, Profession.all, :id, :name, {:include_blank => "POKLIC NI DOLOÄŒEN"}, { :class => 'form-control' }  %>
    </div>

    <%= f.submit t('defaults.save'), class: 'btn btn-success' %>
<% end %>

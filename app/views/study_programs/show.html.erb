<div class="row page-heading">
  <div class="col-lg-10">
    <h2><%= @study_program.higher_education_institution.acronym %> - <%= @study_program.name %>
      (<%= @study_program.type_of_study.name %>)</h2>
  </div>
</div>

<%= render 'menu' %>

<br/>

<div class="ibox">
  <div class="ibox-content">
    <div class="row">
      <div class="col-lg-12">
        <div class="m-b-md table-links">
          <%= link_to t('defaults.edit'), edit_study_program_path(@study_program), class: 'btn btn-primary pull-right' %>

          <%= link_to t('defaults.back'), study_programs_path, class: 'btn btn-warning pull-right' %>
          <h2><%= @study_program.name %></h2>
        </div>
        <dl class="dl-horizontal">
          <dt><%= t 'activerecord.attributes.study_program.code' %>:</dt>
          <dd><%= @study_program.code %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-5">
        <dl class="dl-horizontal">

          <dt><%= t 'activerecord.models.university' %>:</dt>
          <dd><%= @study_program.higher_education_institution.name %></dd>

          <dt><%= t '.university_short' %>:</dt>
          <dd><%= @study_program.higher_education_institution.acronym %></dd>

          <dt><%= t 'activerecord.models.type_of_study' %>:</dt>
          <dd><%= @study_program.type_of_study.name %></dd>
        </dl>
      </div>
      <div class="col-lg-7">
        <dl class="dl-horizontal">

          <dt><%= t 'activerecord.models.enrollment' %>:</dt>
          <dd><%= @study_program.enrollment.name %></dd>

          <dt><%= t 'activerecord.attributes.study_program.updated_at' %>:</dt>
          <dd><%= l @study_program.updated_at, format: :short %></dd>

          <dt><%= t 'activerecord.attributes.study_program.created_at' %>:</dt>
          <dd><%= l @study_program.created_at, format: :short %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <dl class="dl-horizontal">
          <dt><%= t '.filled' %>:</dt>
          <dd>
            <div class="progress progress-striped active m-b-sm">
              <div style="width: 0%;" class="progress-bar progress-bar-info"></div>
            </div>
            <% if @study_program.enrollment.start > Time.now %>
                <small><%= t '.filled_text_before' %></small>
            <% else %>
                <small><%= t '.filled_text_during', percent: '0' %></small>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>

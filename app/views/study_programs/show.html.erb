
<div class="row page-heading">
  <div class="col-lg-10">
    <h2><%= @study_program.higher_education_institution.acronym %> - <%= @study_program.name %>
      (<%= @study_program.type_of_study.name %>)</h2>
  </div>
</div>

<div class="tabs-container">
  <ul class="nav nav-tabs">
    <li class="active"><a href="<%= '' %>" aria-expanded="true">Pregled</a></li>
    <li><a href="<%= '' %>" aria-expanded="false">Pogoji</a></li>
    <li><a href="<%= '' %>" aria-expanded="false">Kandidati</a></li>
  </ul>
</div>

<br />

<div class="ibox">
  <div class="ibox-content">
    <div class="row">
      <div class="col-lg-12">
        <div class="m-b-md table-links">
          <%= link_to 'Edit', edit_study_program_path(@study_program), class: 'btn btn-primary pull-right' %>

          <%= link_to 'Nazaj', study_programs_path, class: 'btn btn-warning pull-right' %>
          <h2><%= @study_program.name %></h2>
        </div>
        <dl class="dl-horizontal">
          <dt>Koda:</dt> <dd><%= @study_program.code %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-5">
        <dl class="dl-horizontal">

          <dt>Univerza:</dt>
          <dd><%= @study_program.higher_education_institution.name %></dd>

          <dt>Kratica univerze:</dt>
          <dd><%= @study_program.higher_education_institution.acronym %></dd>

          <dt>Način študija:</dt>
          <dd><%= @study_program.type_of_study.name %></dd>
        </dl>
      </div>
      <div class="col-lg-7">
        <dl class="dl-horizontal">

          <dt>Razpis:</dt>
          <dd><%= @study_program.enrollment.name %></dd>

          <dt>Posodbljeno:</dt>
          <dd><%= l @study_program.updated_at, format: :short %></dd>

          <dt>Ustvarjeno:</dt>
          <dd><%= l @study_program.created_at, format: :short %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <dl class="dl-horizontal">
          <dt>Zapolnjeno:</dt>
          <dd>
            <div class="progress progress-striped active m-b-sm">
              <div style="width: 10%;" class="progress-bar progress-bar-info"></div>
            </div>
            <small>Trenutno zapolnjenih <strong>0%</strong> mest. Podroben seznam se nahaja na seznamu kandidatov.</small>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>
